{
    "name": "kreerc/a11ybuddy",
    "description": "A platform for documenting and discussing digital accessibility for developers and users alike",
    "type": "project",
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "A11yBuddy\\": "src/A11yBuddy/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "rm -rf template/dependencies/",
            "mkdir -p template/dependencies/",
            "cp -r vendor/twbs/bootstrap/dist/ template/dependencies/bootstrap/"
        ],
        "post-install-cmd": [
            "rm -rf template/dependencies/",
            "mkdir -p template/dependencies/",
            "cp -r vendor/twbs/bootstrap/dist/ template/dependencies/bootstrap/"
        ],
        "test": "./vendor/bin/phpunit tests"
    },
    "require": {
        "twbs/bootstrap": "5.3.*",
        "erusev/parsedown": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    }
}
